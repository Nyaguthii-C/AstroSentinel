  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: cursive;
      overflow-x: hidden;
      background-color: #0d0c0c;
      color: #C0C0C0;
      font-size: 20px;
    }


    #name {
      font-size: 40px;
      font-weight: bold;
      margin-right: auto;
      font-family: 'Galada', cursive;
    }

    header {
      height: 60px;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      padding: 10px;
      color: #ffffff;
      z-index: 1000;
      display: flex;
      align-items: center;
      transition: height 0.3s;
    }

    section {
      padding: 40px;
      text-align: center;
      max-width: 100%;
    }

    footer {
      padding: 20px;
      text-align: center;
      background-color: rgba(0, 0, 0, 0.5);
      color: #f5f5f5; 
      font-weight: bold;
      font-size: 20px;
    }

    header button {
      margin-left: 30px; 
      margin-right: 30px;
      padding: 10px 30px;
      border-radius: 10px;
      font-size: 15px;
    }
    
    header button:hover {
      background-color: #9adaf3;
    }

    #footer a {
      color: #ffffff;
      margin-left: 30px;
    }


   #footer a:hover { 
      color: #9adaf3;
    }

    #map {
      margin-top: 80px;
    }
    .custom-margin {
      margin-left: 30px;
      color: #ffffff;
    }

    ul {
      list-style-type: none;
    }

    .offer-item  {
      max-width: inherit;
      margin: 0 auto;
      text-align: justify;
    }

    #offer-title {
      text-align: center;
      font-family: 'Galada', cursive;
    }

    a {
      text-decoration: none;
      color: inherit;
      cursor: pointer;
    }
    
    a:hover {
      color: #9adaf3;
    }
  </style>
